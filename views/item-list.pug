extends layout

block content
  h1!= title

  if items.length
    .card-wrapper.wide
      for item in items
        a.card(href=item.url)
          h2!= item.name
          if item.image
            img(src=item.image, alt="")
          else
            .card-image
              span Image Placeholder
          p.center
            i ( In stock: #{item.stock} )
          p.center
            if item.description
              | !{item.description}
            else
              | No description provided for this item...
          p.center.bold $#{item.priceFormatted}
  else
    p.center
      i There are no products yet...

  button#create(type="button") New Product

  script(src="../javascripts/list.js")
