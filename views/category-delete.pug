extends layout

block content
  h1= title

  if items.length
    p This category is not empty. Delete following items before proceeding:
    ul
      for item in items
        li
          a(href=item.url)= item.name
  else
    p.center This action is irreversible!
    form(method="POST")
      label(for="password") Password
        input#password(type="password" name="password" required)
      button(type="submit") Delete

  if errors
    h2(style="text-align: start") Errors
    ul
      for error in errors
        li= error.msg
